<Modal @ref="modal">
    <ModalContent Centered="true">
        <ModalHeader>
            <ModalTitle>@Title</ModalTitle>
            <CloseButton />
        </ModalHeader>
        <ModalBody Style="text-align: justify !important;" Padding="Padding.Is3">
            @ChildContent
        </ModalBody>
    </ModalContent>
</Modal>

@code {
    private Modal modal;
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    public void ShowModal()
    {
        modal.Show();
    }
}